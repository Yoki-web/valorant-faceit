{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": [
      "node",
      "next-auth"          // üîπ –¥–æ–±–∞–≤–ª–µ–Ω–æ
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",                
    "paths": {                     
      "@/*": ["src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/types/**/*.d.ts"   // üîπ –¥–æ–±–∞–≤–ª–µ–Ω–æ, —á—Ç–æ–±—ã –≤–∏–¥–µ—Ç—å –∫–∞—Å—Ç–æ–º–Ω—ã–µ —Ç–∏–ø—ã
  ],
  "exclude": [
    "node_modules"
  ]
}
